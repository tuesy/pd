- content_for :header do
  :css
    body{
      font-family: Helvetica;
    }
    canvas {
      position: fixed;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
    }
    #debugger{
      top: 0;
      left: 0;
      position: fixed;
      background: black;
      color: #eee;
      padding: 4px;
      display: none;
    }

%h1= resource.patient
%h3 Notes
%p= resource.notes
#debugger

:javascript
  Leap.loop({})
    .use('playback', {
      recording: '/#{params[:recording] || 'pinch-57fps'}.json.lz',
      requiredProtocolVersion: 6,
      pauseOnHand: true,
      loop: true
    })
    .use('riggedHand');

  window.controller = Leap.loopController;
